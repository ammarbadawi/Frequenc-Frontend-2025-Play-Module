        "tsConfigPath": "apps/venues-service/tsconfig.app.json"
      }
    },
    "bookings-service": {
      "type": "application",
      "root": "apps/bookings-service",
      "entryFile": "main",
      "sourceRoot": "apps/bookings-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bookings-service/tsconfig.app.json"
      }
    },
    "games-service": {
      "type": "application",
      "root": "apps/games-service",
      "entryFile": "main",
      "sourceRoot": "apps/games-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/games-service/tsconfig.app.json"
      }
    },
    "payments-service": {
      "type": "application",
      "root": "apps/payments-service",
      "entryFile": "main",
      "sourceRoot": "apps/payments-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payments-service/tsconfig.app.json"
      }
    },
    "notifications-service": {
      "type": "application",
      "root": "apps/notifications-service",
